= form_for @restaurant do |f|
	%fieldset
		.row
			.large-12.columns
				= f.label :name
				= f.text_field :name, autofocus:true
				= f.label :description
				= f.text_area :description
				= f.label :address
				= f.text_area :address
				= f.label :phone_number
				= f.text_field :phone_number
				= f.submit class: 'button'
				= link_to 'Cancel', root_path

				
				